<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new" method="POST">
                <div class="form-group">
                    <input type="text" name="title" placeholder="Insert the note title" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Add a description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block" type="submit">Save</button>
                    <a href="/notes" class="btn btn-primary btn-block">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
